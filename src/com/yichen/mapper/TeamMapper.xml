<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yichen.mapper.TeamMapper">
	<resultMap type="TeamVo" id="teamResultMap">
		<result property="id" column="id" />
		<result property="name" column="name" />
		<result property="delFlag" column="del_flag" />
		<result property="addTime" column="add_time" />
		<result property="addUserId" column="add_user_id" />
	</resultMap>

	<!-- 查询数据 -->
	<select id="querTeams" resultMap="teamResultMap">
		SELECT a.id,a.name FROM t_team a
	</select>

	<!-- 添加数据 -->
	<insert id="insertTeam">
		insert into t_team(id,name,del_flag,add_time,add_user_id) values (#{id},#{name},0,now(),1)
	</insert>

	<!-- 删除数据 -->
	<delete id="delTeam">
		delete from t_team where id = #{id};
	</delete>

	<!-- 修改数据 -->
	<update id="updateTeam">
		update t_team set name = #{name},del_flag=0,add_time=now(),add_user_id=1 where id=#{id}
	</update>

	<!-- 通过id查询 -->
	<select id="queryTeamById" resultMap="teamResultMap">
		select a.id, a.name from t_team a
		where a.id = #{id}
	</select>

</mapper>